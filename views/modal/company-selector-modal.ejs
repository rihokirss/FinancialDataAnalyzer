<% console.log('Inside company-selector-modal.ejs, allTags:', typeof allTags !== 'undefined' ? allTags : 'undefined'); %>
<div class="modal fade" id="companyModal" tabindex="-1" aria-labelledby="companyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="companyModalLabel">Lisa/Eemalda ettevõtteid</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Sulge"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="companySearch" class="form-label">Otsi ettevõtet</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="companySearch" placeholder="Sisesta ettevõtte nimi või registrikood">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Valitud ettevõtted</label>
                            <div id="selectedCompanies" class="list-group">
                                <% comparisonData.forEach(company => { %>
                                    <div class="list-group-item d-flex justify-content-between align-items-center" data-company-id="<%= company.id %>">
                                        <%= company.name %>
                                        <button type="button" class="btn btn-danger btn-sm" onclick="removeCompany('<%= company.id %>')">
                                            Eemalda
                                        </button>
                                    </div>
                                <% }); %>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Otsingutulemused</label>
                            <div id="searchResults" class="list-group">
                                <!-- Search results will be added here dynamically -->
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">Vali tagid</label>
                            <select class="form-select" id="tagFilter" multiple>
                                <% allTags.forEach(tag => { %>
                                    <option value="<%= tag %>"><%= tag %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sulge</button>
                <button type="button" class="btn btn-primary" id="updateComparisonBtn">Uuenda võrdlust</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/company-selector-modal.js"></script>