<%- include('partials/_head') %>
<%- include('partials/_header') %>

<div class="container mt-5">
  <div class="row mb-4">
    <div class="col-md-6">
      <select id="companySelector" class="form-select">
        <option value="">Vali ettevõte</option>
        <% companies.forEach(c => { %>
          <option value="<%= c._id %>" <%= company._id.toString() === c._id.toString() ? 'selected' : '' %>>
            <%= c.name %> (<%= c.registrationCode %>)
          </option>
        <% }); %>
      </select>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-6">
      <div class="input-group">
        <span class="input-group-text">Perioodi algus</span>
        <input type="number" id="startDate" class="form-control" min="2000" max="2099" step="1" value="<%= startYear %>">
        <span class="input-group-text">Perioodi lõpp</span>
        <input type="number" id="endDate" class="form-control" min="2000" max="2099" step="1" value="<%= endYear %>">
        <button class="btn btn-primary" id="filterDates">Filtreeri</button>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-6">
      <button id="exportData" class="btn btn-success">
        <i class="bi bi-download"></i> Ekspordi CSV
      </button>
    </div>
  </div>

  <h1><%= company.name %></h1>

  <div class="row mt-4">
    <div class="col-md-12">
      <h2>Kvartaalsed andmed</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Periood</th>
            <th>Maksud</th>
            <th>Tööjõumaksud</th>
            <th>Käive</th>
            <th>Töötajaid</th>
          </tr>
        </thead>
        <tbody>
            <!-- Will be populated by JavaScript -->
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-12">
        <h2>Ajaloolised trendid</h2>
        <div id="financialChart"></div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-12">
        <h2>Finantssuhtarvud</h2>
        <div class="table-responsive">
            <table class="table table-striped" id="ratiosTable">
                <thead>
                    <tr>
                        <th>Periood</th>
                        <th>Brutokasumi marginaal (%)</th>
                        <th>Netokasumi marginaal (%)</th>
                        <th>Käive töötaja kohta (€)</th>
                        <th>Tööjõukulu (€)</th>
                        <th>Maksude osakaal käibest (%)</th>
                        <th>Tööjõumaksude osakaal käibest (%)</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Will be populated by JavaScript -->
                </tbody>
            </table>
        </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-12">
        <h2>Suhtarvude trendid</h2>
        <div id="ratiosChart"></div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

<script src="/js/company-data.js"></script>
<script src="/js/financial-ratios.js"></script>

<%- include('partials/_footer') %>